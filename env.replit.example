# Replit Environment Variables Example
# Copy this to .env in your Replit project

# MongoDB Connection (Required)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-tutor-mvp?retryWrites=true&w=majority

# OpenAI API (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Pinecone (Required for Knowledge Base)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=your_pinecone_index_name_here

# JWT Secret (Required)
JWT_SECRET=your_jwt_secret_here

# CORS Configuration (Optional - Replit will auto-detect)
# CORS_ORIGIN=https://your-repl-domain.replit.dev
# REPLIT_DOMAINS=your-repl-domain.replit.dev
# REPL_SLUG=your-repl-slug
# REPL_OWNER=your-replit-username

# Optional: Wolfram Alpha API (for math tools)
WOLFRAM_APP_ID=your_wolfram_app_id_here

# Optional: ElevenLabs API (for voice features)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Node Environment
NODE_ENV=development
