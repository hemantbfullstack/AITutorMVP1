# AI Tutor MVP - Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/aitutor-mvp
# Alternative: MongoDB Atlas connection string
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/aitutor-mvp

# =============================================================================
# AUTHENTICATION
# =============================================================================
# JWT secret for token signing (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-here

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI API key for AI tutoring
OPENAI_API_KEY=your-openai-api-key-here
# OpenAI model to use (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# VECTOR DATABASE (Pinecone)
# =============================================================================
# Pinecone API key
PINECONE_API_KEY=your-pinecone-api-key-here
# Pinecone environment
PINECONE_ENVIRONMENT=your-pinecone-environment
# Pinecone index name
PINECONE_INDEX_NAME=aitutor-knowledge-base

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Wolfram Alpha API key for math calculations and plotting
WOLFRAM_APP_ID=your-wolfram-app-id-here

# ElevenLabs API key for voice synthesis (optional)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# =============================================================================
# PAYMENT PROCESSING (Stripe)
# =============================================================================
# Stripe secret key
STRIPE_SECRET_KEY=your-stripe-secret-key-here
# Stripe publishable key (for frontend)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here
# Stripe webhook secret
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated)
# For production, add your domain here
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# FILE UPLOADS
# =============================================================================
# Directory for file uploads
UPLOAD_PATH=./uploads

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug logging
DEBUG=false
# Enable detailed error messages
VERBOSE_ERRORS=false
